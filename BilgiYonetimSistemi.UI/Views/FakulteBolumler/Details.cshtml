@model BilgiYonetimSistemi.DATA.FakulteBolumler

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-8 col-md-offset-2 ">
                <div class="panel-body center-block">

                    <h4>Fakülte Bölüm</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayName("Fakülte Adı:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.BolumunFakultesi.FakulteAdi)
                        </dd>

                        <dt>
                            @Html.DisplayName("Bölüm Adı:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FakulteninBolumu.BolumAdi)
                        </dd>
                        <br />
                        <br />
                    </dl>

                    <p>
                        @Html.ActionLink("GÜNCELLE", "Edit", new { id = Model.FakulteBolumlerID }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Listeye Dön", "Index", null, new
                  {
                        @class = "btn btn-default  ",
                        @style = "float:right"
                  })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>