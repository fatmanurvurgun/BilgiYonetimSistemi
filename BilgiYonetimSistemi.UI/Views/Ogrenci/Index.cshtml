@model IEnumerable<BilgiYonetimSistemi.DATA.Ogrenci>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("Yeni Öğrenci Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Eğitim Düzeyi
        </th>
        <th>
           Öğrenim Şekli
        </th>
        <th>
           Adı
        </th>
        <th>
           Soyadı
        </th>
        <th>
         Numarası
        </th>
        <th>
           Kayıt Tarihi
        </th>
        <th>
           Mezuniyet Tarihi
        </th>
        <th>
          Bölümü
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OgrencininEgitimDuzeyi.EgitimDuzeyTipi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrencininOgrenimSekli.OgrenimTipi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrenciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrenciSoyadi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrenciNumarasi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KayitTarihi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MezuniyetTarihi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BolumID)
        </td>
        <td style="text-align:right">
            @Html.ActionLink("DÜZENLE", "Edit", new { id = item.OgrenciID }, new { @class = "btn btn-warning" })

            @Html.ActionLink("DETAY", "Details", new { id = item.OgrenciID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("SİL", "Delete", new { id = item.OgrenciID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}
</table>
