@model BilgiYonetimSistemi.DATA.Fakulte

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fakülte Ekle</h2>
<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-8 col-md-offset-2 ">
                <div class="panel-body center-block">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Fakülte</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                             
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Fakülte Adı</label>
                                    @Html.EditorFor(model => model.FakulteAdi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FakulteAdi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="KAYDET" class="btn btn-primary " />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Tüm Fakülteleri Gör", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>