@model IEnumerable<BilgiYonetimSistemi.DATA.Fakulte>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("YENİ KAYIT", "Create", null, new { @class = "btn btn-info " })
</p>
<table class="table table-striped">
    <tr>
        <th style="text-align:center">
            <h2><strong> Fakülteler </strong></h2>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FakulteAdi)
            </td>
            <td style="text-align:right">
                @Html.ActionLink("DÜZENLE", "Edit", new { id = item.FakulteID }, new { @class = "btn btn-warning" })

                @Html.ActionLink("DETAY", "Details", new { id = item.FakulteID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("SİL", "Delete", new { id = item.FakulteID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
