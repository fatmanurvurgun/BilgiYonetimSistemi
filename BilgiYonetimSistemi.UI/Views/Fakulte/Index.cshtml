@model IEnumerable<BilgiYonetimSistemi.DATA.Fakulte>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="text-align:right">
            <h2><strong> Fakülteler </strong></h2>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FakulteAdi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FakulteID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FakulteID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FakulteID })
        </td>
    </tr>
}

</table>
