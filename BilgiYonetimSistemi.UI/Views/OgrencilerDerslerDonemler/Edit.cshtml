@model BilgiYonetimSistemi.DATA.OgrencilerDerslerDonemler

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-8 col-md-offset-2 ">
                <div class="panel-body center-block">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Öğrencinin Dönem Dersi</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.OgrenciDerslerDonemler)

                            <div class="form-group">
                                @Html.Label("Öğrenci:", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold;" })
                                <div class="col-md-10">
                                    @Html.DropDownList("OgrenciID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.OgrenciID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Ders:", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold;" })
                                <div class="col-md-10">
                                    @Html.DropDownList("DersID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DersID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Dönem:",htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold;" })
                                <div class="col-md-10">
                                    @Html.DropDownList("DonemID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DonemID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="GÜNCELLE" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>