@model BilgiYonetimSistemi.DATA.OgrencilerDerslerDonemler

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-8 col-md-offset-2 ">
                <div class="panel-body center-block">
                    <div class="alert alert-danger">
                        <h3>@Model.DersinOgrencisi.OgrenciAdi @Model.DersinOgrencisi.OgrenciSoyadi Öğrencisinin Aldığı @Model.OgrencininDersi.DersAdi Dersini Silmek İstediğinize Emin Misiniz?</h3>
                        </div>
                        <div>
                            <h4>Öğrencinin Dönem Dersi</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayName("Öğrenci:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DersinOgrencisi.OgrenciAdi)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Dönem:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.OgrenciDersinDonemi.DonemYili)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Ders:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.OgrencininDersi.DersAdi)
                                </dd>
                                <br />
                                <br />
                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="SİL" class="btn btn-danger" /> 
                                    @Html.ActionLink("Listeye Dön", "Index", null, new
                                {
                                    @class = "btn btn-default  ",
                                    @style = "float:right"
                                })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>