@model BilgiYonetimSistemi.DATA.Ogretmen

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Öğretmen Ekleme Sayfası</h2>

@using (Html.BeginForm("Create", "Ogretmen", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="container">
            <div class="row" style="margin-top:50px">
                <div class="panel panel-default ">
                    <div class="col-md-8 col-md-offset-2 ">
                        <div class="panel-body center-block">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">TC:</label>
                                    @Html.TextBoxFor(model => model.OgretmeninBilgisi.TCNo, new { @class = "form-control", required = "required", pattern = "[0-9]{11}", title = "11 hane TC giriniz" })
                                    @Html.ValidationMessageFor(model => model.OgretmeninBilgisi.TCNo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Adı:</label>
                                    @Html.EditorFor(model => model.OgretmenAdi, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.OgretmenAdi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Soyadı:</label>
                                    @Html.EditorFor(model => model.OgretmenSoyadi, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.OgretmenSoyadi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Ünvan:</label>
                                    @Html.DropDownList("unvan", new List<SelectListItem>() { new SelectListItem() { Text = "Profesör", Value = "Profesör" }, new SelectListItem() { Text = "Doçent", Value = "Doçent" }, new SelectListItem() { Text = "Doktor", Value = "Doktor" }, new SelectListItem() { Text = "Öğretim Üyesi", Value = "Öğretim Üyesi" }, new SelectListItem() { Text = "Araştırma Görevlisi", Value = "Araştırma Görevlisi" } }, "Ünvan Seçiniz", new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Unvan, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Göreve Başlama Tarihi:</label>
                                    <input class="form-control" type="date" name="baslangicTarihi" required />
                                    @Html.ValidationMessageFor(model => model.BaslangicTarihi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Fotoğraf:</label>
                                    <input type="file" name="file" id="file" required />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Ekle" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Listeye Dön", "Index", "", new { @class = "btn btn-primary" })
</div>
