@model BilgiYonetimSistemi.DATA.Entities.Yonetici

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Yonetici", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container">
            <div class="row" style="margin-top:50px">
                <div class="panel panel-default ">
                    <div class="col-md-8 col-md-offset-2 ">
                        <div class="panel-body center-block">
                            <h4>Yonetici</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">                                
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">TC:</label>
                                    @Html.EditorFor(model => model.TC, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TC, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">                                
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Adı:</label>
                                    @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Soyad:</label>
                                    @Html.EditorFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label style="font-weight:bold;">Fotoğraf:</label>
                                    <input type="file" name="file" id="file" required />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
