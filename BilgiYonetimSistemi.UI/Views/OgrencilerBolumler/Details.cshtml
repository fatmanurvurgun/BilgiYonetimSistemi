@model BilgiYonetimSistemi.DATA.OgrencilerBolumler

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-8 col-md-offset-2 ">
                <div class="panel-body center-block">
                    <div>
                        <h4>Öğrenci Bölüm</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Öğrenci Adı:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BolumunOgrencisi.OgrenciAdi)
                            </dd>

                            <dt>
                                @Html.DisplayName("Bölüm")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.OgrencininBolumu.BolumAdi)
                            </dd>
                            <br />
                            <br />
                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("GÜNCELLE", "Edit", new { id = Model.OgrencilerBolumlerID }, new { @class = "btn btn-primary" })  
                        @Html.ActionLink("Listeye Dön", "Index", null, new
                    {
                        @class = "btn btn-default  ",
                        @style = "float:right"
                    })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>