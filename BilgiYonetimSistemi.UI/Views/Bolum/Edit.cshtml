@model BilgiYonetimSistemi.DATA.FakulteBolumler

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-8 col-md-offset-2 ">
                <div class="panel-body center-block">
                    @using (Html.BeginForm("Edit","Bolum",FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Bölüm</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.BolumID)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.FakulteID)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.FakulteBolumlerID)

                        <div class="form-group">
                            @Html.Label("Bölüm Adı:", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold;" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FakulteninBolumu.BolumAdi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FakulteninBolumu.BolumAdi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Eğitim Dili:", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold;" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FakulteninBolumu.EgitimDili, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FakulteninBolumu.EgitimDili, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="GÜNCELLE" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    }

                    <div>
                        @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>