@model BilgiYonetimSistemi.DATA.Bolum

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-8 col-md-offset-2 ">
                <div class="panel-body center-block">
                    <div>
                        <div>
                            <h4>Bolum</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayName("Bölüm Adı:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BolumAdi)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Eğitim Dili:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.EgitimDili)
                                </dd>

                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("GÜNCELLE", "Edit", new { id = Model.BolumID },new { @class = "btn btn-primary" }) 
                            @Html.ActionLink("Listeye Dön", "Index", null ,new
                       {
                           @class = "btn btn-default  ",
                           @style = "float:right"
                       })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
