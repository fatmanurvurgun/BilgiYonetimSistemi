@model IEnumerable<BilgiYonetimSistemi.DATA.FakulteBolumler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="panel panel-default ">
            <div class="col-md-12  ">
                <div class="panel-body center-block">
                    <p>
                        @Html.ActionLink("YENİ KAYIT", "Create", null, new { @class = "btn btn-info " })
                    </p>
                    <br />
                    <table class="table table-striped">
                        <tr>
                            <th>
                                <h4>
                                    <strong>
                                        @Html.DisplayName("Fakülte Adı")
                                    </strong>
                                </h4>
                            </th>
                            <th>
                                <h4>
                                    <strong>
                                        @Html.DisplayName("Bölüm Adı")
                                    </strong>
                                </h4>
                            </th>
                            <th>
                                <h4>
                                    <strong>
                                        @Html.DisplayName("Eğitim Dili")
                                    </strong>
                                </h4>
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BolumunFakultesi.FakulteAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FakulteninBolumu.BolumAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FakulteninBolumu.EgitimDili)
                                </td>
                                <td style="text-align:right">
                                    @Html.ActionLink("DÜZENLE", "Edit", new { id = item.BolumID }, new { @class = "btn btn-warning" })
                                    @Html.ActionLink("DETAY", "Details", new { id = item.BolumID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("SİL", "Delete", new { id = item.BolumID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>