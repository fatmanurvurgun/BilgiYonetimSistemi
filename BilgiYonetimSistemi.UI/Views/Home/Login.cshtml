@using MVCOrnek12.Identity.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}


<head>
    <meta charset="utf-8">
    <title>BYS - Bilgi Yönetim Sistemi</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Bilge Adam">
    <meta name="author" content="Bilge Adam">


    <link href="~/lib/css/styles.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">



    <link href="/Content/css/fonts.css" rel="stylesheet" />
    
    
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</head>

<body class="focusedform">
    <div class="verticalcenter">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <img src="~/images/kapi5.png" alt="Logo" class="brand" style="width:227px;" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!--Hata Basla-->
            <!--Hata Bit-->
            <form action="/tr/Login" id="LoginForm" method="post">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <h4 class="text-center" style="margin-bottom: 25px;">Bilgi Yönetim Sistemi</h4>


                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input class="form-control" data-val="true" data-val-required="The Kullanıcı Adı field is required." id="Email" name="Email" placeholder="Kullanıcı Adı" type="text" value="@ViewBag.Email" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    <input class="form-control" data-val="true" data-val-required="The Şifre field is required." id="Password" name="Password" placeholder="Şifre" type="password" value="@ViewBag.Password" />
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                            <div class="pull-left"><label style="margin-right:12px;"><input class="" data-val="true" data-val-required="The Beni Hatırla field is required." id="RememberMe" name="RememberMe" placeholder="Beni Hatırla" type="checkbox" value="true" /><input name="RememberMe" type="hidden" value="false" /> &nbsp;Beni Hatırla</label></div>
                            <div class="pull-right">
                                <input type="submit" value=Giriş id="btnLogin" class="btn btn-success" />
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        }
        <div class="row text-center" style="font-size: 11px;">
            <span style="color: #aeafb1;">&copy; @DateTime.Now.Year</span> &raquo; <a style="color: #aeafb1;" href="https://www.bilgeadam.com/akademi">Bilge Adam Akademi</a>
        </div>
    </div>
</body>